{
	"name": "@rustyjs/template",
	"version": "0.0.1",
	"description": "template",
	"main": "index.cjs",
	"types": "index.d.ts",
	"module": "index.mjs",
	"author": "@rustyjs",
	"license": "MIT",
	"packageManager": "yarn@3.2.1",
	"scripts": {
		"lint": "eslint lib tests --ext ts --fix",
		"format": "prettier --write {lib,tests}/**/*.ts",
		"docs": "typedoc",
		"test": "run-p \"test:**\"",
		"test:node": "vitest run",
		"test:rust": "cargo test",
		"test:bun": "bun run test:node",
		"fmt": "run-p \"fmt:**\"",
		"fmt:node": "prettier -w .github npm tests .cargo index.cjs index.mjs index.d.ts README.md Cargo.toml",
		"fmt:rust": "cargo +nightly fmt",
		"update": "yarn upgrade-interactive",
		"build": "napi build --platform --release --js false",
		"post-build": "gen-esm-wrapper index.cjs index.mjs && yarn fmt"
	},
	"napi": {
		"name": "template",
		"triples": {
			"defaults": true,
			"additional": [
				"x86_64-unknown-linux-musl",
				"aarch64-unknown-linux-gnu",
				"aarch64-apple-darwin",
				"aarch64-linux-android",
				"x86_64-unknown-freebsd",
				"aarch64-unknown-linux-musl",
				"armv7-unknown-linux-gnueabihf"
			]
		}
	},
	"devDependencies": {
		"@jjwesterkamp/typedoc-theme": "^1.2.0",
		"@napi-rs/cli": "^2.10.1",
		"@sapphire/eslint-config": "^4.3.7",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/eslint": "^8",
		"@types/node": "^18.0.6",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"c8": "^7.11.3",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"gen-esm-wrapper": "^1.1.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"prettier-plugin-toml": "^0.3.1",
		"typedoc": "^0.23.8",
		"typedoc-plugin-mdn-links": "^2.0.0",
		"typescript": "^4.7.4",
		"vitest": "^0.18.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rustyjs/project-template.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"keywords": [
		"napi",
		"napi-rs",
		"rust",
		"bindings"
	],
	"engines": {
		"node": ">=v16.16.0",
		"npm": ">=7.0.0"
	},
	"bugs": {
		"url": "https://github.com/rustyjs/project-template/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": "@sapphire/prettier-config",
	"dependencies": {
		"@node-rs/helper": "^1.3.3"
	}
}
