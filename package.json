{
	"name": "@rustyjs/template",
	"version": "0.0.1",
	"description": "template",
	"main": "index.cjs",
	"types": "index.d.ts",
	"module": "index.mjs",
	"author": "@rustyjs",
	"license": "MIT",
	"packageManager": "yarn@3.8.6",
	"scripts": {
		"lint": "eslint tests --ext ts --fix",
		"format": "prettier --write tests/**/*.ts",
		"docs": "typedoc",
		"test": "run-p \"test:**\"",
		"test:node": "vitest run",
		"test:rust": "cargo test",
		"test:bun": "bun run test:node",
		"fmt": "run-p \"fmt:**\"",
		"fmt:node": "prettier -w .",
		"fmt:rust": "cargo +nightly fmt",
		"update": "yarn upgrade-interactive",
		"build": "napi build --platform --release --js index.cjs",
		"post-build": "gen-esm-wrapper index.cjs index.mjs && yarn fmt"
	},
	"napi": {
		"name": "template",
		"triples": {
			"defaults": true,
			"additional": [
				"x86_64-unknown-linux-musl",
				"aarch64-unknown-linux-gnu",
				"aarch64-apple-darwin",
				"aarch64-linux-android",
				"x86_64-unknown-freebsd",
				"aarch64-unknown-linux-musl",
				"armv7-unknown-linux-gnueabihf"
			]
		}
	},
	"devDependencies": {
		"@jjwesterkamp/typedoc-theme": "^1.2.0",
		"@napi-rs/cli": "^2.18.4",
		"@sapphire/eslint-config": "^4.4.3",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^3.3.4",
		"@types/eslint": "^8.56.12",
		"@types/node": "^18.19.59",
		"@types/prettier": "^2.7.3",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-prettier": "^4.2.1",
		"gen-esm-wrapper": "^1.1.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-toml": "^0.4.0",
		"typedoc": "^0.26.10",
		"typedoc-plugin-mdn-links": "^2.0.2",
		"typescript": "^4.9.5",
		"vite": "^3.2.11",
		"vitest": "^0.34.6"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rustyjs/project-template.git"
	},
	"files": [
		"index.cjs",
		"index.mjs",
		"index.d.ts"
	],
	"keywords": [
		"napi",
		"napi-rs",
		"rust",
		"bindings"
	],
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"bugs": {
		"url": "https://github.com/rustyjs/project-template/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": "@sapphire/prettier-config"
}
